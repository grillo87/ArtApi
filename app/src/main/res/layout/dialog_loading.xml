<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dialog_loading_container_height"
    android:layout_margin="@dimen/dialog_loading_containter_margin"
    android:orientation="horizontal">


    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        wheel:matProg_barColor="@color/green"
        wheel:matProg_progressIndeterminate="true" />


    <TextView
        android:id="@+id/dialog_loading_text_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dialog_loading_text_message_margin_left"
        android:layout_weight="0.8"
        android:gravity="left|center"
        android:maxLines="1"
        android:textSize="@dimen/dialog_loading_text_message_text_size" />

</LinearLayout>